<% provide :title, @user.name %>
<div class="row">
  <% if @reports.any? %>
    <h3><span id = "users-show"><%= t ".total" %>(<%= @pagy.count %>)</span></h3>
    <%= link_to t(".create_report"), new_report_url, class: "btn btn-success btn-lg btn-block col-md-4 block-button"%>
      <ol class="reports">
        <%= render @reports %>
      </ol>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% end %>
</div>
<%= render "shared/modal" %>
