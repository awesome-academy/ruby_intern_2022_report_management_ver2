<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_infor">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
        <%= render "infor" %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @reports.any? %>
      <h3>(<%= @pagy.count %>)</h3>
        <%= link_to t(".create_report"), new_report_url, class: "btn btn-success btn-lg btn-block"%>
        <ol class="reports">
          <%= render @reports %>
        </ol>
      <%== pagy_bootstrap_nav(@pagy) %>
    <% end %>
  </div>
</div>
