<header class="navbar navbar-fixed-top navbar-inverse">
  <div class = "container">
    <%= link_to "Daily Report Management", root_path, id: "logo" %>
    <nav>
      <ul class = "nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), static_pages_home_path %></li>
        <li><%= link_to t(".help"), static_pages_help_path %></li>
        <% if logged_in? %>
            <li><%= link_to t(".department"), users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), user_path(id: current_user) %></li>
                <li><%= link_to t(".settings"), edit_user_url(id: current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(".logout"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t(".login"), login_path %></li>
          <% end %></li>
        <li><%= link_to t(".en"), locale:"en" %></li>
        <li><%= link_to t(".vi"), locale:"vi" %></li>
      </ul>
    </nav>
  </div>
</header>
