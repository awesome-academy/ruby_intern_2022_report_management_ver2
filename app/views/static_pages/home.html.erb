<% provide :title, t(".title") %>
<% if logged_in? %>
  <% if is_manager?(@current_user) %>
    <h1 id="department-report"><%= t ".filter_report" %></h1>
    <%= render "layouts/searchbar" %>
    <h1 id="department-report"><%= t ".department_report" %></h1>
    <%= render "shared/feed" %>
  <% else %>
    <h1 id="department-report"><%= t ".my_report" %></h1>
    <%= render @reports %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% end %>
<% else %>
  <div class = "mgr-25">
    <h1><%= t ".title" %></h1>
    <p><%= t ".home_content" %></p>
    <div class="center jumbotron">
      <%= link_to t(".login_now"), login_url, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>
<%= render "shared/modal" %>
