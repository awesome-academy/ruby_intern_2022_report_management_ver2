<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>

<div class="create-manager">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag department_user_department_path(department_id: @department.id), method: :patch do %>
      <div class="form-group">
        <%= label_tag t(".role") %>
        <%= select_tag :role, options_for_select(UserDepartment.roles.keys) %>
      </div>
      <%= submit_tag t(".create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
